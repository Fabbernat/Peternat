@model IEnumerable<PetRegistryApp.Models.Category>

<h2>Categories</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
        </tr>
    </thead>
    <tbody>
@if (Model == null || !Model.Any())
{
    <p>No categories found. Our database might be having a little trouble right now. Please try again later!</p>
    <p>In the meantime, check out these popular pet categories:</p>
    <ul>
        <li><a href="#">Dogs</a></li>
        <li><a href="#">Cats</a></li>
        <li><a href="#">Birds</a></li>
    </ul>
}
else
{
<ul>
    @foreach (var item in Model)
    {
        <li>
            <a asp-action="Details" asp-route-id="item.CategoryId">@Html.DisplayFor(modelItem => item.Name)</a> -
        </li>
    }
</ul>
}
    </tbody>
</table>
<a href="../">Go back</a>